<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/wecare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <ImageButton
        android:id="@+id/imageWhatis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:padding="0dp"
        android:src="@drawable/whatis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageStart"></ImageButton>

    <ImageButton
        android:id="@+id/imageStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@null"
        android:padding="0dp"
        android:src="@drawable/startques3"
        app:layout_constraintEnd_toStartOf="@+id/imageScope"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"></ImageButton>

    <ImageButton
        android:id="@+id/imageHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:background="@null"
        android:padding="0dp"
        android:src="@drawable/history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageWhatis">

    </ImageButton>

    <ImageButton
        android:id="@+id/imageScope"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="31dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        android:padding="016dp"
        android:src="@drawable/howtoscope"
        app:layout_constraintBottom_toTopOf="@+id/imageHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageStart"
        app:layout_constraintTop_toBottomOf="@+id/imageView"></ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>